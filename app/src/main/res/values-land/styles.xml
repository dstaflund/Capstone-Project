<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main Content -->
    <style name="Theme.Main.Content.Root" parent="Theme.Main.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/no_padding</item>
        <item name="android:layout_margin">@dimen/no_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Acknowledgments -->
    <style name="Theme.About.Fragment.Acknowledgments.Layout" parent="Theme.About.Fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnCount">2</item>
    </style>
    <style name="Theme.About.Fragment.Acknowledgments.Value" parent="Theme.About.Fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|start|top</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
    </style>
</resources>