<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Further Information -->
    <style name="Theme.About.Fragment.Info.Layout" parent="Theme.About.Fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnCount">2</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/half_margin</item>
        <item name="android:layout_marginStart">@dimen/half_margin</item>
        <item name="android:layout_marginRight">@dimen/half_margin</item>
        <item name="android:layout_marginEnd">@dimen/half_margin</item>
        <item name="android:layout_marginTop">@dimen/quarter_margin</item>
        <item name="android:layout_marginBottom">@dimen/quarter_margin</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:elevation">@dimen/default_elevation</item>
    </style>
    <style name="Theme.About.Fragment.Info.Header" parent="Theme.About.Fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|start|top</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="Theme.About.Fragment.Info.Blurb" parent="Theme.About.Fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|start|top</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:lines">@integer/info_blurb_lines</item>
        <item name="android:autoLink">web</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>
    <style name="Theme.About.Fragment.Info.Link" parent="Theme.About.Fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|start|top</item>
        <item name="android:autoLink">web</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
    </style>
</resources>