<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent1Light"
            android:padding="@dimen/default_padding"
            android:elevation="@dimen/default_elevation"
            android:text="No memorials shown"
            android:textStyle="bold"
            android:textSize="@dimen/search_result.label.text_size"
            android:gravity="left|start"
            android:textAlignment="textStart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use the top search bar to find memorials by:\n"
            android:textSize="16dp"
            android:layout_marginTop="@dimen/full_margin"
            android:layout_marginLeft="@dimen/full_margin"
            android:layout_marginRight="@dimen/full_margin"
            android:layout_marginStart="@dimen/full_margin"
            android:layout_marginEnd="@dimen/full_margin"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="\u2022 Resident"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginStart="@dimen/full_margin"
                android:layout_marginEnd="@dimen/full_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="\u2022 Hometown"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginStart="@dimen/full_margin"
                android:layout_marginEnd="@dimen/full_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="\u2022 Obit. Date"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginStart="@dimen/full_margin"
                android:layout_marginEnd="@dimen/full_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="\u2022 Rank"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginStart="@dimen/full_margin"
                android:layout_marginEnd="@dimen/full_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="\u2022 Latitude"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginStart="@dimen/full_margin"
                android:layout_marginEnd="@dimen/full_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="\u2022 Longitude"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginStart="@dimen/full_margin"
                android:layout_marginEnd="@dimen/full_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="\u2022 Geomemorial Name"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginStart="@dimen/full_margin"
                android:layout_marginEnd="@dimen/full_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="\u2022 NTS Series"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginStart="@dimen/full_margin"
                android:layout_marginEnd="@dimen/full_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="\u2022 NTS Area"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginStart="@dimen/full_margin"
                android:layout_marginEnd="@dimen/full_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="\u2022 NTS Sheet"
                android:textSize="16dp"
                android:layout_marginLeft="@dimen/full_margin"
                android:layout_marginRight="@dimen/full_margin"
                android:layout_marginStart="@dimen/full_margin"
                android:layout_marginEnd="@dimen/full_margin"/>
        </GridLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>