<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/count_and_distance"
        style="@style/Theme.Search.Result.CountAndDistance">
        <TextView
            android:id="@+id/record_count"
            style="@style/Theme.Search.Result.RecordCount"/>
        <TextView
            android:id="@+id/distance"
            style="@style/Theme.Search.Result.Distance"/>
    </LinearLayout>

    <GridLayout
        style="@style/Theme.Search.Result.Root"
        android:background="@color/white">

        <TextView
            android:id="@+id/list_item_common_name_label"
            android:text="@string/search_resident"
            style="@style/Theme.Search.Result.Label"/>

        <TextView
            android:id="@+id/list_item_common_name"
            style="@style/Theme.Search.Result.Value.Resident"/>

        <TextView
            android:id="@+id/list_item_common_hometown_label"
            android:text="@string/search_hometown"
            style="@style/Theme.Search.Result.Label"/>

        <TextView
            android:id="@+id/list_item_common_hometown"
            style="@style/Theme.Search.Result.Value.NonResident"/>

        <TextView
            android:id="@+id/list_item_common_rank_label"
            android:text="@string/search_rank"
            style="@style/Theme.Search.Result.Label"/>

        <TextView
            android:id="@+id/list_item_common_rank"
            style="@style/Theme.Search.Result.Value.NonResident"/>

        <TextView
            android:id="@+id/list_item_common_obit_label"
            android:text="@string/search_obit"
            style="@style/Theme.Search.Result.Label"/>

        <TextView
            android:id="@+id/list_item_common_obit"
            style="@style/Theme.Search.Result.Value.NonResident"/>

        <TextView
            android:id="@+id/list_item_common_geomemorial_label"
            android:text="@string/search_geomemorial"
            style="@style/Theme.Search.Result.Label"/>

        <TextView
            android:id="@+id/list_item_common_geomemorial"
            style="@style/Theme.Search.Result.Value.NonResident"/>

        <TextView
            android:id="@+id/list_item_common_nts_sheet_label"
            android:text="@string/search_nts_sheet"
            android:visibility="gone"
            style="@style/Theme.Search.Result.Label"/>

        <TextView
            android:id="@+id/list_item_common_nts_sheet"
            android:visibility="gone"
            style="@style/Theme.Search.Result.Value.NonResident"/>

        <TextView
            android:id="@+id/list_item_common_coordinate_label"
            android:text="@string/search_coordinate"
            android:visibility="gone"
            style="@style/Theme.Search.Result.Label"/>

        <TextView
            android:id="@+id/list_item_common_coordinate"
            android:visibility="gone"
            style="@style/Theme.Search.Result.Value.NonResident"/>

        <LinearLayout
            android:id="@+id/list_item_action_layout"
            style="@style/Theme.Search.Result.Button.Container">

            <ImageButton
                android:id="@+id/favorite_button"
                android:contentDescription="@string/search.favorite.content_description"
                style="@style/Theme.Search.Result.Button.Favorite"/>

            <ImageButton
                android:id="@+id/share_button"
                android:contentDescription="@string/search.share.content_description"
                style="@style/Theme.Search.Result.Button.Share"/>

            <ImageButton
                android:id="@+id/place_button"
                android:contentDescription="@string/search.place.content_description"
                style="@style/Theme.Search.Result.Button.Place"/>


        </LinearLayout>
    </GridLayout>
</LinearLayout>