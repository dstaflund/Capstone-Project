<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- About -->
    <style name="Theme.ABout.Fragment.Acknowledgments.Container" parent="Theme.About.Fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/half_margin</item>
        <item name="android:layout_marginStart">@dimen/half_margin</item>
        <item name="android:layout_marginRight">@dimen/half_margin</item>
        <item name="android:layout_marginEnd">@dimen/half_margin</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginBottom">@dimen/quarter_margin</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:elevation">@dimen/default_elevation</item>
    </style>
    <style name="Theme.About.Fragment.Acknowledgments.Testers.Label" parent="Theme.About.Fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|end</item>
        <item name="android:layout_marginLeft">@dimen/full_margin</item>
        <item name="android:layout_marginStart">@dimen/full_margin</item>
        <item name="android:layout_marginRight">@dimen/full_margin</item>
        <item name="android:layout_marginEnd">@dimen/full_margin</item>
        <item name="android:gravity">right|end</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:maxLines">10</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>
    <style name="Theme.About.Fragment.Acknowledgments.Testers.Value" parent="Theme.About.Fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|end</item>
        <item name="android:layout_marginLeft">@dimen/full_margin</item>
        <item name="android:layout_marginStart">@dimen/full_margin</item>
        <item name="android:layout_marginRight">@dimen/full_margin</item>
        <item name="android:layout_marginEnd">@dimen/full_margin</item>
        <item name="android:gravity">right|end</item>
        <item name="android:textAlignment">textEnd</item>
    </style>


</resources>